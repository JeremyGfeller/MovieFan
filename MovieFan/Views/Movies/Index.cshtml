@model IEnumerable<MovieFan.Models.Movies>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="container">
    @foreach (Movies movie in Model)
    {
        <a href="/Movies/Details/@movie.Id">
            <div class="row border p-3">
                <div class="col-4">@movie.Title</div>
                <div class="col-2">@movie.Category.Name</div>
                <div class="col-2">@movie.Rating.Name</div>
            </div>
        </a>
